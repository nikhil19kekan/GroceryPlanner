<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uta.groceryplanner.FriendsFragment">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/billFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="80dp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorTitle2"
        app:elevation="6dp"
        android:tooltipText="Add Bill"
        app:pressedTranslationZ="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_group_add_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/personalFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="24dp"
        android:visibility="invisible"
        app:elevation="6dp"
        app:backgroundTint="@color/colorTitle2"
        app:pressedTranslationZ="12dp"
        android:tooltipText="Invite or add people"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_person_add_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mainFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:elevation="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:backgroundTint="@color/colorTitle"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_add_white_24dp" />


    <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Summary"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    <TextView
        android:id="@+id/summaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/summary"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="TextView" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/friendsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/summaryText">
            </android.support.v7.widget.RecyclerView>

</RelativeLayout>
